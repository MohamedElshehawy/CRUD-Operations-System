@model Department
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Edit @Model.Name Department</h1>
<div asp-validation-summary="All"></div>
<form method="post" asp-action="Edit">
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input class="form-control" asp-for="Code" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="CreatedAt"></label>
        <input class="form-control" asp-for="CreatedAt" />
        <span asp-validation-for="CreatedAt" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <input type="submit" value="submit" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-warning">Back To List</a>
    </div>
</form>